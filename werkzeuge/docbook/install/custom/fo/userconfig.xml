<configuration>
	<entry>
		<key>hyphenation-dir</key>
		<value>@CUSTOMFO@/hyph</value>
	</entry>
	<fonts>
		<font metrics-file="@CUSTOMFO@\fonts\arial.xml" kerning="yes" embed-file="@CUSTOMFO@\fonts\arial.ttf">
			<font-triplet name="Arial" style="normal" weight="normal"/>
			<font-triplet name="ArialMT" style="normal" weight="normal"/>
		</font>
		<font metrics-file="@CUSTOMFO@\fonts\arialb.xml" kerning="yes" embed-file="@CUSTOMFO@\fonts\arialb.ttf">
