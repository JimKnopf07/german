			<font-triplet name="ArialMT" style="normal" weight="bold"/>
		</font>
		<font metrics-file="@CUSTOMFO@\fonts\ariali.xml" kerning="yes" embed-file="@CUSTOMFO@\fonts\ariali.ttf">
			<font-triplet name="Arial" style="italic" weight="normal"/>
			<font-triplet name="ArialMT" style="italic" weight="normal"/>
		</font>
		<font metrics-file="@CUSTOMFO@\fonts\arialbi.xml" kerning="yes" embed-file="@CUSTOMFO@\fonts\arialbi.ttf">
			<font-triplet name="Arial" style="italic" weight="bold"/>
			<font-triplet name="ArialMT" style="italic" weight="bold"/>
		</font>

		<font metrics-file="@CUSTOMFO@\fonts\times.xml" kerning="yes" embed-file="@CUSTOMFO@\fonts\times.ttf">
			<font-triplet name="Times" style="normal" weight="normal"/>
			<font-triplet name="TimesMT" style="normal" weight="normal"/>
		</font>
		<font metrics-file="@CUSTOMFO@\fonts\timesb.xml" kerning="yes" embed-file="@CUSTOMFO@\fonts\timesb.ttf">
